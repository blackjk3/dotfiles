# Add RVM to PATH for scripting
PATH=/opt/local/bin

PATH=$PATH:/opt/local/sbin
PATH=$PATH:/usr/local
PATH=$PATH:/usr/local/sbin
PATH=$PATH:/Applications/ColdFusion9/bin/
PATH=$PATH:/usr/local/bin
PATH=$PATH:/usr/bin
PATH=$PATH:/usr/sbin
PATH=$PATH:/bin

export PATH
export PATH=$PATH:$HOME/.rvm/bin

# MySQL
export MYSQL_BIN=/usr/local/mysql/bin;
export PATH=$PATH:$MYSQL_BIN
export MYSQL_LIB=/usr/local/mysql/lib:
export PATH=$PATH:$MYSQL_LIB:$USR_BIN


# PostgreSQL
export PATH=$PATH:/Library/PostgreSQL/9.1/bin/
export ARCHFLAGS='-arch x86_64'

# Oracle
export NLS_LANG="AMERICAN_AMERICA.UTF8"
export ORACLE_HOME=/opt/oracle/instantclient
export DYLD_LIBRARY_PATH=$ORACLE_HOME
export LD_LIBRARY_PATH=/opt/oracle/instantclient
export SQLPATH=/opt/oracle/instantclient
export TNS_ADMIN=/opt/oracle/network/admin
export PATH=$PATH:$ORACLE_HOME
export PATH=$PATH:$DYLD_LIBRARY_PATH
export RC_ARCHS=i386

export ORACLE_BIN=/opt/oracle/instantclient;
export PATH=$PATH:$ORACLE_BIN

# SVN
export SVN_EDITOR='vim'